#!/bin/sh

HOST=localhost
PORT=4321

FILE1=/tmp/main1
FILE2=/tmp/main2
ERROR=/tmp/main-err


MAIN="nc $HOST $PORT"

lang=$(zenity --entry --entry-text="Enter 1 for English ; 2 for Indonesian" --text="Enter preffered language")
if [ $lang -eq 1 ]
then
{
LANG=en_US
zenity --entry --entry-text="type" --text "Insert Continent(Space)City" > $FILE1 || end
}
elif [ $lang -eq 2 ]
then
{
LANG=id_ID
zenity --entry --entry-text="tipe" --text "Masukkan Benua(Spasi)Kota" > $FILE1 || end
}
fi
###
if cat $FILE1 | $MAIN > $FILE2 2>$ERROR
	then
		zenity --info --text "`cat $FILE2`"
	#else
	#	zenity --info --text "Error"
	fi
###
